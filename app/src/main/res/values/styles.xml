<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/BasicColor</item>
        <item name="colorPrimaryDark">@color/BasicColor</item>
    </style>

    <style name="AppTheme.New" parent="Theme.AppCompat.Light">
        <!--<item name="colorPrimaryDark">@color/BasicColor</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ScrollPage" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/scroll_page</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="actionBarTheme">@style/ScrollPage</item>
        <item name="actionBarStyle">@style/ScrollPage</item>-->
    </style>

    <style name="CameraPage" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/photo_page</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CentralPage" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Transparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
