<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/gradient_color_right"
                android:endColor="@color/gradient_color_left">
            </gradient>
            <corners android:radius="4dp">
            </corners>
        </shape>
    </item>
    <item>
       <shape
           android:shape="rectangle">
           <gradient
               android:startColor="@color/gradient_color_left"
               android:endColor="@color/gradient_color_right">
           </gradient>
           <corners android:radius="4dp">
           </corners>
       </shape>                  <!--#303F9F либо так startcolor либо #283593. Радиус был 3dp изменил на 4dp если говно поменять назад-->
    </item>
</selector>
