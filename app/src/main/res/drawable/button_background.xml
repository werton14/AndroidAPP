<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape>
            <solid android:color="@color/buttonPressed"></solid>
            <corners android:radius="20dp"></corners></shape>
    </item>
    <item  android:state_focused="true" >
        <shape>
            <solid android:color="@color/buttonPressed"></solid>
            <corners android:radius="20dp"></corners></shape>
    </item>
    <item>
       <shape>
           <solid android:color="@color/NoPressedButton"></solid>
           <corners android:radius="20dp"></corners></shape>
    </item>
</selector>