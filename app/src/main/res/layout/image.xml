<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:paddingBottom="@dimen/without_margin"
    android:paddingLeft="@dimen/without_margin"
    android:paddingRight="@dimen/without_margin"
    android:paddingTop="@dimen/without_margin"
    tools:context="com.example.vital.myapplication.FragmentPrototypeScroll">

    <LinearLayout
        android:id="@+id/Parentlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/White"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin">

            <ImageButton

                android:id="@+id/profile_image_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/White"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/circle" />

            <TextView
                android:id="@+id/nickname_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingEnd="7dp"
                android:paddingStart="7dp"
                android:text="default"
                android:textAllCaps="false"
                android:textColor="@color/BasicColor"
                android:textSize="14sp"
                android:typeface="serif" />                     <!--просит android studio-->

            <ImageButton
                android:id="@+id/option_image_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/White"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_social_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/competitive_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backgroungforpicture"
                android:cropToPadding="false"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/like_image_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/White"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/like" />

            <TextView
                android:id="@+id/like_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingEnd="7dp"
                android:paddingStart="7dp"
                android:text="322"
                android:textColor="@color/BasicColor"
                android:textSize="14sp"
                android:typeface="serif" />

            <!--<ImageButton
                android:id="@+id/download_image_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/White"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_arrow" />-->

        </LinearLayout>

        <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"                                     Пока не нравится
            android:background="@android:color/darker_gray"/>-->

    </LinearLayout>
</RelativeLayout>
